{
    "name": "InK2",
    "build": {
        "context": "..",
        "dockerfile": "../Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": ["ms-vscode.cmake-tools", "ms-vscode.cpptools", "ms-python.python"]
        }
    },
    "runArgs": [
        // Allows communication to MSP430
        "--privileged",
        "-v",
        "/dev/bus/usb:/dev/bus/usb"
    ],
    "postCreateCommand": "./container-setup.sh"
}
